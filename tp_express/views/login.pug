extends layout
block content
  h1.text-2xl.font-bold.mb-4 Login
  form(method="POST" action="/login" class="space-y-3")
    input(type="email" name="email" placeholder="Email" required class="w-full border p-2 rounded")
    input(type="password" name="password" placeholder="Password" required class="w-full border p-2 rounded")
    button(type="submit" class="w-full bg-green-600 text-white p-2 rounded") Login
  p.mt-2.text-sm.text-gray-600
    | No account?
    a.text-indigo-600(href="/register") Register
